{
  "name": "boilerplate-html5",
  "version": "1.0.0",
  "description": "HTML5 Boilerplate (mostly for games)",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -p -r _localstatic _dev",
    "_dev": "cross-env NODE_ENV=dev webpack-dev-server --open --config _config/webpack.config.js",
    "test:dev": "npm-run-all --silent -p -r _localstatic _test:dev",
    "_test:dev": "cross-env NODE_ENV=testdev webpack-dev-server --open --config _config/webpack.config.js",
    "test:dist:production": "npm-run-all --silent -s clean _build:test:dist:production -p -r _localstatic _test:dist:production",
    "_build:test:dist:production": "cross-env NODE_ENV=testdist webpack --optimize-minimize --config _config/webpack.config.js",
    "_test:dist:production": "cross-env NODE_ENV=testdist karma start _config/karma.conf.js",
    "test:dist": "npm-run-all --silent -s clean _build:test:dist -p -r _localstatic _test:dist",
    "_build:test:dist": "cross-env NODE_ENV=testdist webpack --optimize-minimize --config _config/webpack.config.js",
    "_test:dist": "cross-env NODE_ENV=testdist karma start _config/karma.conf.js",
    "build:dist": "npm-run-all -s clean _copydist _build:dist",
    "_copydist": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./scripts/copy.ps1",
    "_build:dist": "cross-env NODE_ENV=production webpack -p --config _config/webpack.config.js",
    "clean": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./scripts/clean.ps1",
    "build:webpack": "npm-run-all -s clean _build:webpack",
    "_build:webpack": "cross-env NODE_ENV=production webpack --config _config/webpack.config.js",
    "build:tsc": "npm-run-all -s clean _build:tsc",
    "_build:tsc": "tsc --project _config/tsconfig.json",
    "dist:server": "npm-run-all --silent build:dist _dist:server",
    "_dist:server": "http-server ./dist -p 5000 --cors",
    "_localstatic": "http-server ./static -p 4000 --cors"
  },
  "author": "David Komer",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^3.5.1",
    "@types/file-saver": "^0.0.0",
    "@types/mocha": "^5.2.7",
    "@types/stats.js": "^0.17.0",
    "chai": "^3.5.0",
    "cross-env": "^4.0.0",
    "file-saver": "^1.3.8",
    "html-webpack-plugin": "^2.30.1",
    "http-server": "^0.12.1",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "2.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-source-map-support": "1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.13",
    "mocha": "^3.5.3",
    "mocha-loader": "^1.1.3",
    "mocha-typescript": "^1.1.17",
    "npm-run-all": "^4.1.5",
    "rimraf": "2.6.1",
    "source-map-loader": "^0.2.4",
    "stats.js": "^0.17.0",
    "ts-loader": "^2.3.7",
    "tslint": "^5.20.1",
    "webpack": "^2.7.0",
    "webpack-dev-server": "^3.1.11"
  },
  "dependencies": {
    "@types/eventemitter3": "^2.0.2",
    "@types/gsap": "^1.20.2",
    "@types/lodash": "^4.14.149",
    "eventemitter3": "^3.1.2",
    "gsap": "^2.1.3",
    "lodash": "^4.17.15",
    "pixi-filters": "^3.1.1",
    "pixi-tilemap": "^2.0.6",
    "pixi.js": "^5.2.1",
    "rot-js": "^2.1.1",
    "typescript": "^3.8.3"
  }
}
