{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "outDir": "../build",
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es5",
        "lib": [
            "es6",
            "es5",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "../src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage"
    ]
}